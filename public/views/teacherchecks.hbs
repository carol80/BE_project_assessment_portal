    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <!--customised libraries-->
    <link rel="stylesheet" type="text/css" style="css/responsive.css">
    <link rel="stylesheet" href="../css/style.css">

    <!--animation libraries-->
  <script defer src="/node_modules/swup/dist/swup.min.js"></script>
  <script defer src="../js/scripts.js"></script>
</head>
<body>



{{!-- NAVIGATION BAR --}}

<div class="navbar">
<div class="scene">
	<div class="box">
		<div class="front face">
			<i class="lnr lnr-home"></i>
		</div>
		<a href="/{{teacher}}"><div class="right face">
			<p>HOME</p>
		</div></a>
	</div>
</div>
<div class="scene">
	<div class="box">
		<div class="front face">
			<i class="lnr lnr-spell-check"></i>
		</div>
		<a href="#"><div class="right face">
			<p>FORM	UPDATES</p>
		</div></a>
	</div>
</div>
<div class="scene">
	<div class="box">
		<div class="front face">
			<i class="lnr lnr-exit"></i>
		</div>
		<a href="/logout"><div class="right face">
			<p>LOGOUT</p>
		</div></a>
	</div>
</div>
</div>


<style>
	p{
		font-size: 12px;
		color: #111;
		text-align: center;
	}

	a:hover{
		color: #111;
	}

	.lnr{
		font-size: 35px;
		padding-left: 17px;
	}

	.navbar{
		position: fixed;
		right: 0;
		width: 90px;
		height: 100px;
	}

	.scene{
		width: 90px;
		height: 100px;
	}

	.box{
		width: 100%;
		height: 100%;
		transform-style: preserve-3d;
		transition: all 0.5s ease-out;
		transform-origin: 0 0;
	}

	.scene:hover .box{
		transform: rotateY(-90deg);
		cursor: pointer;
	}

	.face{
		position: absolute;
		width: 100%;
		height: 100%;
		transform-origin: 0 0;
	}

	.front{
		transform: rotateY(0deg);
		background-color: #111;
	}

	.right{
		transform: rotateY(90deg);
		left: 70px;
		background-color: #fcda05;
		color: #111;
		font-size: 0.8rem;
	}
</style>



<div>
<h1>
  WELCOME {{teacher}}
</h1>
<h4 style="text-align: center;">
  check Form Updates here!!
</h4>


<main id="swup">
  <div class="container">
    {{#if listExists}}
  <table id="table">
    <thead>
        <tr><th>Roll No.</th><th>7th term Work</th><th>7th Oral</th><th>8th term Work</th><th>8th Oral</th><th>Final term Work</th><th>Final Oral</th></tr>
    </thead>
    <tfoot>
      <tr>
        <th colspan='3'>
          Year: 2018-19
        </th>
      </tr>
    </tfoot>
    <tbody>
        {{#each rows}}
        <tr>
            <td data-title='rno'>{{this.rno}}</td>
            <script>console.log(listExists)</script>
            {{#equal this.term7 'true'}}
                <td align="center" style="text-align:center; font-size:150%; font-weight:bold; color:green;">&#x2714</td>
            {{else}}
                <td align="center" style="text-align:center; font-size:150%; font-weight:bold; color:red;">&#10008</td>
            {{/equal}}
            {{#equal this.oral7 'true'}}
                <td align="center" style="text-align:center; font-size:150%; font-weight:bold; color:green;">&#x2714</td>
            {{else}}
                <td align="center" style="text-align:center; font-size:150%; font-weight:bold; color:red;">&#10008</td>
            {{/equal}}
            {{#equal this.term8 'true'}}
                <td align="center" style="text-align:center; font-size:150%; font-weight:bold; color:green;">&#x2714</td>
            {{else}}
                <td align="center" style="text-align:center; font-size:150%; font-weight:bold; color:red;">&#10008</td>
            {{/equal}}
            {{#equal this.oral7 'true'}}
                <td align="center" style="text-align:center; font-size:150%; font-weight:bold; color:green;">&#x2714</td>
            {{else}}
                <td align="center" style="text-align:center; font-size:150%; font-weight:bold; color:red;">&#10008</td>
            {{/equal}}
            {{#equal this.finalterm 'true'}}
                <td align="center" style="text-align:center; font-size:150%; font-weight:bold; color:green;">&#x2714</td>
            {{else}}
                <td align="center" style="text-align:center; font-size:150%; font-weight:bold; color:red;">&#10008</td>
            {{/equal}}
            {{#equal this.finaloral 'true'}}
                <td align="center" style="text-align:center; font-size:150%; font-weight:bold; color:green;">&#x2714</td>
            {{else}}
                <td align="center" style="text-align:center; font-size:150%; font-weight:bold; color:red;">&#10008</td>
            {{/equal}}
        </tr>
        {{/each}} 
    </tbody>
  </table>
    {{/if}}
</div>
</main>
</body>
</html>