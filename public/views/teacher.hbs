<style>
	p{
		font-size: 12px;
		color: #111;
		text-align: center;
	}

	a:hover{
		color: #111;
	}

	.lnr{
		font-size: 35px;
		padding-left: 17px;
    color: #fcda05;
	}

	.navbar{
		position: fixed;
		right: 0;
		width: 90px;
		height: 100px;
	}

	.scene{
		width: 90px;
		height: 100px;
	}

	.box{
		width: 100%;
		height: 100%;
		transform-style: preserve-3d;
		transition: all 0.5s ease-out;
		transform-origin: 0 0;
	}

	.scene:hover .box{
		transform: rotateY(-90deg);
		cursor: pointer;
	}

	.face{
		position: absolute;
		width: 100%;
		height: 100%;
		transform-origin: 0 0;
	}

	.front{
		transform: rotateY(0deg);
		background-color: #2a363b;
	}

	.right{
		transform: rotateY(90deg);
		left: 70px;
		background-color: #fcda05;
		color: #111;
		font-size: 0.8rem;
	}
</style>






