<body style="background-color: lightblue">
    {{>navigation}}

    <h1 class="form">7th Semester Termwork</h1>

    <div class="container" style="text-align: center">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add">Evaluation</button>
        <div class="modal fade" id="add" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add Evaluation</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form method="post" action="/test">
                            <div class="form-group">
                                <label for="exampleFormControlSelect1">Group No:</label>
                                <input class="form-control" id="exampleFormControlSelect1" type='text'
                                    name="grpno">
                                </input>
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlSelect2">Leader Score CO1</label>
                                <input class="form-control" id="exampleFormControlSelect2" type='text' name="co1">
                                </input>
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlSelect2">Leader Score CO2</label>
                                <input class="form-control" id="exampleFormControlSelect2" type='text' name="co2">
                                </input>
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlInput1">Project Title</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1"
                                    placeholder="Project title" name="title" />
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlInput1">Group Mentor</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1"
                                    placeholder="Group mentor" name="mentor" />
                            </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <input type="submit" class="btn btn-primary" value="ADD" />
                    </div>
                </div>
            </div>
        </div>

        <div class="container" style="padding-top: 10px">
            {{#if listExists}}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Leader Roll No</th>
                        <th>Member 1 Roll No</th>
                        <th>Member 2 Roll No</th>
                        <th>Leader CO 1 Score</th>
                        <th>Leader CO 2 Score</th>
                        <th>Member 1 CO 1 Score</th>
                        <th>Member 1 CO 2 Score</th>
                        <th>Member 2 CO 1 Score</th>
                        <th>Member 2 CO 2 Score</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each rows}}
                    <tr>
                        <td>{{this.rollno1}}</td>
                        <td>{{this.rollno2}}</td>
                        <td>{{this.rollno3}}</td>
                        <td>{{this.co1_1}}</td>
                        <td>{{this.co2_1}}</td>
                        <td>{{this.co1_2}}</td>
                        <td>{{this.co2_2}}</td>
                        <td>{{this.co1_3}}</td>
                        <td>{{this.co2_3}}</td>
                        <td>{{this.mentor}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{/if}}
        </div>

    </div>