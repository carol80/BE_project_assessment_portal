<body>
    {{>navigation}}

    <h1 class="form">7th Semester Termwork</h1>

    <div class="container" style="text-align: center">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add">Evaluation</button>
        <div class="modal fade" id="add" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add Evaluation</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        {{!-- <form method="post" action="/{{teacher}}/{{grpno}}/7term"> <!-- Action to be checked --> --}}
                        <form method="post" action="/{{teacher}}/{{grpno}}/7term">
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    {{grpno}}:
                                </div>
                                <div class="form-group col-md-5">
                                    <input type="number" class="form-control" id="member1_1" placeholder="CO_1">
                                </div>
                                <div class="form-group col-md-5">
                                    <input type="number" class="form-control" id="member1_1" placeholder="CO_2">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    {{rno1}}:
                                </div>
                                <div class="form-group col-md-5">
                                    <input type="number" class="form-control" id="member1_1" placeholder="CO_1">
                                </div>
                                <div class="form-group col-md-5">
                                    <input type="number" class="form-control" id="member1_1" placeholder="CO_2">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    {{rno2}}:
                                </div>
                                <div class="form-group col-md-5">
                                    <input type="number" class="form-control" id="member1_1" placeholder="CO_1">
                                </div>
                                <div class="form-group col-md-5">
                                    <input type="number" class="form-control" id="member1_1" placeholder="CO_2">
                                </div>
                            </div>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <input type="submit" class="btn btn-primary" value="ADD" />
                        </form>

                    </div>       
                    {{!-- <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <input type="submit" class="btn btn-primary" value="ADD" />
                    </div> --}}
                </div>
            </div>
        </div>

        <div class="container" style="padding-top: 10px">
            {{#if listExists}}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Leader Roll No</th>
                        <th>Member 1 Roll No</th>
                        <th>Member 2 Roll No</th>
                        <th>Leader CO 1 Score</th>
                        <th>Leader CO 2 Score</th>
                        <th>Member 1 CO 1 Score</th>
                        <th>Member 1 CO 2 Score</th>
                        <th>Member 2 CO 1 Score</th>
                        <th>Member 2 CO 2 Score</th>
                        <th>Mentor</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each rows}}
                    <tr>
                        <td>{{this.rollno1}}</td>
                        <td>{{this.rollno2}}</td>
                        <td>{{this.rollno3}}</td>
                        <td>{{this.co1_1}}</td>
                        <td>{{this.co2_1}}</td>
                        <td>{{this.co1_2}}</td>
                        <td>{{this.co2_2}}</td>
                        <td>{{this.co1_3}}</td>
                        <td>{{this.co2_3}}</td>
                        <td>{{this.mentor}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{/if}}
        </div>

    </div>